<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FirstMVVMApp.Views.ErrorWindow"
        Title="Error"
        SizeToContent="WidthAndHeight"
        CanResize="False"
        Padding="12"
        WindowStartupLocation="CenterOwner"
        Topmost="True">
  <DockPanel LastChildFill="True">
    <Border DockPanel.Dock="Bottom" Padding="8,6,0,0" Background="Transparent">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button Content="OK" Click="Ok_Click" 
                HorizontalContentAlignment="Center"
                Width="100" MinHeight="28" IsDefault="True"/>
      </StackPanel>
    </Border>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" MaxHeight="300">
      <TextBlock Name="MessageText" TextWrapping="Wrap" />
    </ScrollViewer>
  </DockPanel>
</Window>
